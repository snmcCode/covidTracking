@model MasjidTracker.FrontEnd.Models.Visitor

@using FrontEnd.Models
@using Microsoft.Extensions.Configuration
@using System.Reflection;
@using System
@inject IConfiguration Configuration

@{ ViewData["Title"] = "Home Page";
    bool signinFailed = ViewBag.SigninFailed == null ? false : ViewBag.SigninFailed;
    bool isRedirect = ViewBag.Redirected == null ? false : ViewBag.Redirected;
    bool redirect =   ViewBag.VerifiedSoRedirect == null ? false : ViewBag.VerifiedSoRedirect;
    var organization = ViewBag.Organization == null ? "Online" : ViewBag.Organization;
    bool isVerified = Model == null ? false : Model.isVerified;
    bool disableRequestButton = ViewBag.DisableRequestButton == null ? false : ViewBag.DisableRequestButton;

    string requestSuccess = ViewBag.RequestSuccess == null ? null : ViewBag.RequestSuccess;
    string requestMessage = ViewBag.RequestMessage == null ? null : ViewBag.RequestMessage; }


<head>
    <link rel="manifest" href="/manifest.json" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<div id="disableRequestButton" hidden>@disableRequestButton</div>
<div id="organization" hidden>@organization</div>
<div id="isVerified" hidden>@isVerified</div>

@{ if (requestSuccess != null)
    {
        if (requestSuccess == "True")
        {
            <div class="alert alert-success" role="alert">
                @requestMessage
            </div> 
        } else {
            <div class="alert alert-danger" role="alert">
                @requestMessage
            </div> 
        }
    }

    <button class="add-button">Add to home screen</button>
    
    <div class="header-card" name="ios-banner" id="ios-banner">
        Install this webapp to your iPhone. Tap the "Share" button and select "Add to Home Screen"
    </div>

    @await Html.PartialAsync("Partial/PositiveDeclaration") 
    if (Model != null && Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Production")
    {
        <div id="verifyUser">
            @await Html.PartialAsync("Partial/VerifyVisitor")
        </div> 
    } 
}

<div id="userContainer" class="container-fluid" style="padding:0px; align-items:flex-start">
    <div class="row" style="padding:0px">
        <div class="col-sm-6" style="padding:0px">
            @{ if (Model != null)
                {
                    <h1 id="pageTitle1">@ViewBag.pageTitle</h1>
                    <img id="bannerImg" src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model.QrCode))" style="width:100%" /> 
                } else {
                    @if (signinFailed)
                    {
                        <div id="signinFailed" class="alert alert-danger" role="alert">
                            Failed to sign in. Please check your credentials. Échec de la connexion. Veuillez vérifier vos informations d'identification.
                        </div>
                    }
                    <h1 id="pageTitle2"></h1>
                        <img id="bannerImg" style="width:100%" />

                        <div id="userSignIn">
                            <form name="" method="post">
                                <div class="form-group">
                                    <input name="firstName" id="firstName" placeholder="First name" class="form-control" />
                                    <input name="lastName" id="lastName" placeholder="Last name" class="form-control" />
                                    <input name="phoneNumber" id="phoneNumber" placeholder="Phone number" class="form-control" />
                                    <input name="redirect" value=@isRedirect.ToString() type="hidden" />
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Sign In/Connexion" name="action:Signin" asp-action="Signin" asp-controller="Home" class="btn btn-primary" />
                                    <input type="submit" value="Sign Up/S'inscrire" asp-route-type="up" asp-action="Signup" asp-controller="Home" name="action:Signup" class="btn btn-primary" />
                                </div>
                            </form>
                        </div> 
                }
            }
        </div>

        @if (Model != null)
        {
            <div class="col-sm-6" id="userInfo">
                <div>
                    <b>First name</b>
                </div>
                <div id="userFirstName" style="margin-bottom:10px">@Model.FirstName</div>

                <div>
                    <b>Last name</b>
                </div>
                <div id="userLastName" style="margin-bottom:10px">@Model.LastName</div>

                <div>
                    <b>User ID</b>
                </div>
                <div id="userId" style="margin-bottom:10px"> @Model.Id</div>
                <div id="oguserId" style="margin-bottom:10px" hidden> @Model.Id</div>
            </div> 
        } else {
            <div class="col-sm-6" id="userInfo">
                <div>
                    <b>First name</b>
                </div>
                <div id="userFirstName" style="margin-bottom:10px"></div>

                <div>
                    <b>Last name</b>
                </div>
                <div id="userLastName" style="margin-bottom:10px"></div>

                <div>
                    <b>User ID</b>
                </div>
                <div id="userId" style="margin-bottom:10px"></div>
            </div>
        }
    </div>
</div>

@await Html.PartialAsync("Partial/Acknowledgment")

<div id="homeInfo">
    <h4 style="text-align:center">
        Get your Masjid Pass to use when entering the mosque
    </h4>
    <p style="margin:15px">
        <h5>Welcome back to the mosques!</h5>

        The reopening of our mosques comes with important conditions to help ensure your safety and the safety of our community.<br /><br />

        To quickly contact you in the unfortunate case that you may have been exposed to someone with COVID-19 while at our facility, we need your help.<br /><br />

        <h5>Steps:</h5>
        &emsp;1 - Sign Up to get your Masjid Pass or Sign in to access one if you’ve previously registered.<br />
        &emsp;2 - Input the verification code sent to your phone into the Masjid Pass 'Verification Code' field and click Verify.<br />
        &emsp;3 - Scan your Masjid Pass each time you enter the mosque.<br />
