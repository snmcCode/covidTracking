@model MasjidTracker.FrontEnd.Models.Visitor

@{
    ViewData["Title"] = "Register";
    var organization = ViewBag.Organization;
}

<h1>Registration - Inscription</h1>

<h4>Visitor - Visiteur</h4>
<hr />
<div class="row">
    <div >
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*<div class="form-group">
            <label asp-for="RegistrationOrg" class="control-label"></label>
            <input asp-for="RegistrationOrg" class="form-control" />
            <span asp-validation-for="RegistrationOrg" class="text-danger"></span>
        </div>*@
            @if (organization != "Online")
            {
                Organization selectedOrg;
                Enum.TryParse(organization, out selectedOrg);

                <div class="form-group">
                    <label asp-for="RegistrationOrg" class="control-label"></label>
                    @Html.DropDownListFor(m => m.RegistrationOrg,
                           new SelectList(Enum.GetValues(typeof(Organization)), Organization.SNMC))
                </div>
            }

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"> First Name - Prénom </label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"> Last Name - Nom de famille</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"> Email - Adresse électronique </label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"> Mobile Phone Number - Numéro de téléphone portable </label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            @*<div class="form-group">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>*@
            <div class="form-group">
                <label asp-for="Gender" class="control-label"> Gender - Genre</label>
                @Html.DropDownListFor(m => m.Gender,
                       new SelectList(Enum.GetValues(typeof(Gender))))
            </div>

            @await Html.PartialAsync("Partial/Acknowledgment")

            <div class="form-group">
                @Html.CheckBoxFor(x => x.agreeCheckbox)
                I agree to the <a target="_blank" href="Home/Rules"> rules </a> of the masjid and the
                <a target="_blank" href="Home/Privacy"> privacy policy</a>
                <br />
                J'accepte <a target="_blank" href="Home/Rules"> les règles du masjid </a>
                et <a target="_blank" href="Home/Privacy"> la politique de confidentialité </a>
                <br />
                @Html.ValidationMessageFor(x => x.agreeCheckbox, "", new { @class = "text-danger" })
                @Html.Hidden(nameof(Model.isTrue), "true")
            </div>

            @if (organization != "Online")
            {
                <div class="form-group">
                    <label class="control-label">Bypass verification</label>
                    <input asp-for="isVerified" type="checkbox" />
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Register - S'inscrire" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@*<div>
    <a asp-action="Index">Back to List</a>
</div>*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
