                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsMale" class="control-label"></label>
                @Html.DropDownListFor(m => m.IsMale,
                       new SelectList(Enum.GetValues(typeof(Gender))),
                       "Select Gender")
            </div>
