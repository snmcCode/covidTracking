@page
@model Admin.Pages.Home.HomeModel
@{
    ViewData["Title"] = "Home";
}

<h1>Home</h1>

<div id="SignIn">
    <form method="post">
        <div class="col-md-6">
            <div class="form-group">
                <input name="firstName" id="firstName" placeholder="First Name" class="form-control" />
                <input name="lastName" id="lastName" placeholder="Last Name" class="form-control" />
                <input name="phoneNumber" id="phoneNumber" placeholder=" Mobile Phone Number" class="form-control" />
            </div>
            <div class="form-group">
                <a class="btn btn-outline-primary" asp-page-handler="View">View</a>
                <a class="btn btn-outline-primary" asp-page-handler="Edit">Edit</a>
                <a class="btn btn-outline-primary" asp-page-handler="View">Delete</a>
            </div>
        </div>
    </form>
    <hr />
    <div class="col-md-6">
        <a class="btn btn-primary" href="/Home/Registration">Register New User</a>
    </div>
</div>