@page 
@model Admin.Pages.IndexModel
@{
    ViewData["Title"] = "Sign In";
    ViewData["ShowLogout"] = false;
}

<h1>Admin</h1>
<h4>@ViewData["Title"]</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label class="control-label">Username</label>
                <input asp-for="OrgLoginModel.Username" class="form-control" />
                <span asp-validation-for="OrgLoginModel.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Password</label>
                <input asp-for="OrgLoginModel.Password" class="form-control" type="password" />
                <span asp-validation-for="OrgLoginModel.Password" class="text-danger"></span>
            </div>
             @{ if ((bool) @ViewData["SigninFailed"]){
                    <p style="color:#FF0000";>  Incorrect username and / or password. </p> 
                }}
            <div form-group>
                <input type="submit" value="Sign In" class="btn btn-primary"/>
            </div>
        </form>
       
    </div>
</div>

