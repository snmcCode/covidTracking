<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <gradient android:angle="90"
                android:startColor="@color/colorShadowStart"
                android:endColor="@color/colorShadowEnd"/>
        </shape>
    </item>

    <!-- Border -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="@color/successIndicatorBorder"/>
        </shape>
    </item>

    <!-- Body -->
    <item android:top="2dp" android:bottom="4dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="@color/successIndicator"/>
        </shape>
    </item>

</layer-list>