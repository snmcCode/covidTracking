<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <!-- Custom Styles -->

    <!-- AlertDialog -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <!-- AlertDialog Negative Button -->
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- AlertDialog Positive Button -->
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/failureIndicator</item>
    </style>
    
    <!-- Mode Selection Switch -->
    <style name="ThemeOverlay.ModeSelectionSwitchCompat" parent="">
        <item name="colorControlActivated">@color/failureIndicator</item>
        <item name="colorSwitchThumbNormal">@color/successIndicator</item>
        <item name="android:colorForeground">@color/successIndicator</item>
    </style>

    <!-- Horizontal Progess Bar -->
    <style name="HorizontalProgressBarStyle">
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
</resources>