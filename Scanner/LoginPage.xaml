<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Scanner.LoginPage">
    <NavigationPage.TitleView>
        <Label Text="{StaticResource LoginPageTitle}"
               FontSize="Medium"
               FontAttributes="Bold"
               TextColor="{StaticResource TextIconColor}"
               Margin="{StaticResource PageMargin}"/>
    </NavigationPage.TitleView>
    <StackLayout>
        <StackLayout VerticalOptions="CenterAndExpand"
                     Spacing="30">
            <Entry Placeholder="{StaticResource UsernameInputLabelPlaceHolder}"
               VerticalOptions="Center"/>
            <Entry Placeholder="{StaticResource PasswordInputLabelPlaceHolder}"
               VerticalOptions="Center"/>
        </StackLayout>
        <Button Text="{StaticResource LoginButtonText}"
                VerticalOptions="End"
                Clicked="LoginButtonClickedAsync"/>
    </StackLayout>
</ContentPage>
